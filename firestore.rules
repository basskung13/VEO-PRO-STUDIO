rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    // Check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user ID matches the authenticated user's UID
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if the authenticated user has the 'admin' role
    // This reads the user's document to verify the role.
    function isAdmin() {
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Collection Rules ---

    // Users Collection
    // Stores user profiles, roles, and subscription status
    match /users/{userId} {
      // Users can read their own profile. Admins can read all profiles (for the Admin Panel).
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile document (triggered in AuthContext).
      allow create: if isOwner(userId);
      
      // Users can update their own basic info. 
      // Admins need update access to change roles, ban status, or subscription status.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // Characters Subcollection
    // Nested under /users/{userId}/characters/{characterId}
    match /users/{userId}/characters/{characterId} {
      // Strictly limited to the owner of the parent user document.
      allow read, write: if isOwner(userId);
    }

    // Projects Collection
    // Stores storyboard projects
    match /projects/{projectId} {
      // Allow read if the project's userId matches the requester or if requester is admin.
      // This supports the query: collection('projects').where('userId', '==', auth.uid)
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Allow create if the new document's userId matches the requester.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if the existing document belongs to the requester or requester is admin.
      allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Announcements Collection
    // Global announcements shown on the dashboard
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements.
      allow read: if isSignedIn();
      
      // Only admins can create, update, or delete announcements.
      allow write: if isAdmin();
    }

    // Subscriptions Collection
    // Stores subscription data for premium features
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscription. Admins can read all subscriptions.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admins can create subscriptions.
      allow create: if isAdmin();
      
      // Only admins can update subscriptions.
      allow update: if isAdmin();
      
      // Only admins can delete subscriptions.
      allow delete: if isAdmin();
    }
  }
}
